<p id="notice"><%= notice %></p>

<div class="page-header">
  <%= link_to 'New', new_post_path, class: "float-right btn btn-green" %>
  <h1 class="text-xl font-bold mb-4">Recent Posts</h1>
</div>

<div class="grid grid-cols-3">
  <% @posts.each do |post| %>
    <div>
      <p>
        <strong><%= post.caption %></strong>
        <br/>
        @<%= @post_authors[post.user_id] %>
      </p>
      <%= link_to post do %>
        <%= image_tag post.images.first.variant(resize_to_fill: [340, 400]), class: "hover:shadow-2xl hover:scale-110"%>
      <% end %>
    </div>
  <% end %>
</div>

<br>
